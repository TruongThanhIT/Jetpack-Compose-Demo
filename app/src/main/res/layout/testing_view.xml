<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivTest"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_jet_pack"
        />
    <TextView
        android:id="@+id/tvTest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello from Android view"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/ivTest"
        app:layout_constraintTop_toTopOf="@id/ivTest"
        app:layout_constraintBottom_toBottomOf="@id/ivTest"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>